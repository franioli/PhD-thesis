\renewcommand{\maketitle}{
    \thispagestyle{empty}
	% \vspace*{\fill}
	\begin{center}
        \includegraphics[height=30mm]{figures/logo.png}\\
        \vspace{10pt}
        \@university \\
        \@department \\
        Doctoral program in \@school \\
        \vspace{20pt}
        % Title
        \par\noindent\rule{\textwidth}{0.4pt} \\
        \vspace{20pt}
	    {\Huge \textcolor{SchoolColor}{\textbf{\thetitle}}} \\
        \vspace{10pt}
        \par\noindent\rule{\textwidth}{0.4pt} \\
	    \vspace{20pt}
        % Info
    	\textsc{
            \large
            Thesis of \\ \vspace{4pt}
            \textbf{\theauthor} \\ \vspace{4pt}
            for the doctoral degree in \\ \vspace{4pt}
            \@field \\ \vspace{25pt}
            \normalsize 
            Advisor: Prof. \@advisor\\ \vspace{5pt}
            Co-advisor: Prof. \@coadvisor\\ \vspace{5pt}
            Tutor: Prof. \@tutor \\ \vspace{5pt}
            Chair of the Doctoral Program: \@chair
         } \\ 
        \vspace*{\fill}
        36\textsuperscript{th} PhD cycle \\ \vspace{5pt}        
        \@degreemonth, \@degreeyear
    \end{center} 
    \thispagestyle{empty}

    % Insert empty page
	\newpage 
    \
    \thispagestyle{empty}
    \newpage
}


